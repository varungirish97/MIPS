{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      // "command": "/Library/Developer/CommandLineTools/usr/bin/clang++",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-stdlib=libc++",
        "-g",
        "${workspaceFolder}/*.cpp",            // compile all cpp files
        "-o",
        "app"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",       // always show output
        "focus": true,
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
